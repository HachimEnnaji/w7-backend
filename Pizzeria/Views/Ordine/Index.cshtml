@model IEnumerable<Pizzeria.Models.Ordine>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Indirizzo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsConsegnato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Utente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Indirizzo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsConsegnato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Utente.Username)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdOrdine">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdOrdine">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdOrdine">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
