@model IEnumerable<Pizzeria.Models.Articolo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Immagine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezzo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempoConsegna)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredienti)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <img src="@item.Immagine" alt="@item.Nome" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezzo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempoConsegna)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredienti)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdArticolo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdArticolo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdArticolo">Delete</a>
                    <a asp-action="" asp-route-id="@item.IdArticolo">Acquista</a>

            </td>
        </tr>
}
    </tbody>
</table>
